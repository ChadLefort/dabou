<div class="container push-down">
  {{#if errors}}
    {{#each errors}}
      {{error}}
    {{/each}}
  {{/if}}
  <div class="col-md-5 center-block">
    <div class="panel panel-success">
      <div class="panel-heading">Register</div>
      <div class="panel-body">
        <div class="form-horizontal">
          <form role="form" action="/auth/local/register" method="post">
            <div class="form-group">
              <div class="col-md-10 center-block">
                <input class="form-control" type="text" name="username" placeholder="Username">
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <input class="form-control" type="text" name="email" placeholder="Email">
                </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <button class="btn btn-success col-md-12" type="submit">Sign up</button>
              </div>
            </div>
          </form>
            <p class="text-center">Register using one of these:</p>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <a href="/auth/twitter" role="button" class="btn btn-twitter auth-btn"><i class="fa fa-twitter"></i> Twitter</a>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <a href="/auth/facebook" role="button" class="btn btn-facebook auth-btn"><i class="fa fa-facebook"></i> Facebook</a>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-10 center-block">
                <a href="/auth/google" role="button" class="btn btn-google auth-btn"><i class="fa fa-google"></i> Google</a>
              </div>
            </div>
        </div>
      </div>
   </div>
  </div>
</div>